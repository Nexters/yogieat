{
	"branches": [
		"main",
		{
			"name": "develop",
			"prerelease": "beta"
		}
	],
	"repositoryUrl": "https://github.com/Nexters/yogieat.git",
	"plugins": [
		[
			"@semantic-release/commit-analyzer",
			{
				"preset": "conventionalcommits",
				"releaseRules": [
					{ "type": "feat", "release": "minor" },
					{ "type": "fix", "release": "patch" },
					{ "type": "perf", "release": "patch" },
					{ "type": "refactor", "release": "patch" },
					{ "type": "build", "release": "patch" },
					{ "type": "docs", "release": false },
					{ "type": "style", "release": false },
					{ "type": "test", "release": false },
					{ "type": "ci", "release": false },
					{ "type": "chore", "release": false },
					{ "breaking": true, "release": "major" }
				]
			}
		],
		[
			"@semantic-release/release-notes-generator",
			{
				"preset": "conventionalcommits",
				"presetConfig": {
					"types": [
						{ "type": "feat", "section": "Features" },
						{ "type": "fix", "section": "Bug Fixes" },
						{
							"type": "perf",
							"section": "Performance Improvements"
						},
						{ "type": "refactor", "section": "Code Refactoring" },
						{ "type": "build", "section": "Build System" },
						{
							"type": "docs",
							"section": "Documentation",
							"hidden": false
						}
					]
				}
			}
		],
		[
			"@semantic-release/changelog",
			{
				"changelogFile": "CHANGELOG.md",
				"changelogTitle": "# Changelog\n\nAll notable changes to the YogiEat project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html)."
			}
		],
		[
			"@semantic-release/npm",
			{
				"npmPublish": false
			}
		],
		[
			"@semantic-release/git",
			{
				"assets": ["CHANGELOG.md", "package.json", "pnpm-lock.yaml"],
				"message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
			}
		],
		[
			"@semantic-release/github",
			{
				"successComment": false,
				"failComment": false,
				"releasedLabels": ["released"],
				"addReleases": "bottom"
			}
		]
	]
}
